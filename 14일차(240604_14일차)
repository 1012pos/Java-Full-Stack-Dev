<html lang="ko">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Page1</title>
    </head>
    <body>
        <a href="temp/page2.html">Page2</a>
        <a href="test.html">Test</a>
    </body>
</html>

