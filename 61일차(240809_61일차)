CREATE TABLE `user` (
	userNo INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
	userNm VARCHAR(50) NOT NULL,
	userPwd VARCHAR(50) NOT NULL,
	userEnable BOOLEAN NOT NULL DEFAULT 1,
	userRole VARCHAR(10) NOT NULL DEFAULT 'USER'
);


